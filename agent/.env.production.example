# Chef Chopsky Agent Service Environment Variables - Production Environment

# Required: OpenAI API Key
OPENAI_API_KEY=your_production_openai_api_key_here

# LangSmith Configuration (Required for production monitoring)
LANGCHAIN_TRACING=true
LANGCHAIN_PROJECT=chef-chopsky-production
LANGCHAIN_API_KEY=your_production_langsmith_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=warn

# Frontend URL for CORS (Required for web integration)
FRONTEND_URL=https://your-frontend-production-url.vercel.app

# LangGraph Configuration (if using LangGraph CLI)
LANGGRAPH_PORT=2024
LANGGRAPH_HOST=0.0.0.0

# Retriever & Embeddings Configuration (Production)
RETRIEVER_PROVIDER=pinecone
EMBEDDING_MODEL=openai/text-embedding-3-small

# Vector Store Configuration (Pinecone for production)
LANGCHAIN_INDEX_NAME=chef-chopsky
PINECONE_API_KEY=your_production_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_production_pinecone_environment

# Environment Discriminator
APP_ENV=production

# Production-specific settings
ENABLE_MOCK_RESPONSES=false
DEBUG_MODE=false
ENABLE_DETAILED_LOGGING=false

# Monitoring and Analytics (Required for production)
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your_production_sentry_dsn

# Security and Performance
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_REQUEST_VALIDATION=true

# Feature Flags
ENABLE_NEW_FEATURES=false
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_FEATURES=false
