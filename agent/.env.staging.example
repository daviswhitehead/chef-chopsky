# Chef Chopsky Agent Service Environment Variables - Staging Environment

# Required: OpenAI API Key
OPENAI_API_KEY=your_staging_openai_api_key_here

# LangSmith Configuration (Recommended for staging)
LANGCHAIN_TRACING=true
LANGCHAIN_PROJECT=chef-chopsky-staging
LANGCHAIN_API_KEY=your_staging_langsmith_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=info

# Frontend URL for CORS (Required for web integration)
FRONTEND_URL=https://your-frontend-staging-url.vercel.app

# LangGraph Configuration (if using LangGraph CLI)
LANGGRAPH_PORT=2024
LANGGRAPH_HOST=0.0.0.0

# Retriever & Embeddings Configuration (Staging)
RETRIEVER_PROVIDER=pinecone
EMBEDDING_MODEL=openai/text-embedding-3-small

# Vector Store Configuration (Pinecone for staging)
LANGCHAIN_INDEX_NAME=chef-chopsky-staging
PINECONE_API_KEY=your_staging_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_staging_pinecone_environment

# Environment Discriminator
APP_ENV=staging

# Staging-specific settings
ENABLE_MOCK_RESPONSES=false
DEBUG_MODE=false
ENABLE_DETAILED_LOGGING=false

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your_staging_sentry_dsn
