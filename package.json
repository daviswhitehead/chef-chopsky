{
  "name": "chef-chopsky",
  "version": "1.0.0",
  "description": "Chef Chopsky - AI-powered cooking assistant",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --prefix-colors \"blue,green\" \"npm run dev:frontend\" \"npm run dev:agent\"",
    "dev:supabase": "./scripts/start-dev-with-supabase.sh",
    "dev:frontend": "./scripts/start-frontend-with-supabase.sh",
    "dev:frontend:supabase": "./scripts/start-frontend-with-supabase.sh",
    "dev:agent": "cd agent && PORT=3001 npm run server:dev",
    "build": "npm run build:frontend && npm run build:agent",
    "build:frontend": "cd frontend && npm run build",
    "build:agent": "cd agent && npm run build",
    "test": "npm run test:frontend && npm run test:agent",
    "test:frontend": "cd frontend && npm run test",
    "test:agent": "cd agent && npm run test",
    "test:integration": "cd frontend && npm run test:integration",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:frontend && npm run test:agent && npm run test:integration && npm run test:e2e",
    "lint": "npm run lint:frontend && npm run lint:agent",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:agent": "cd agent && npm run lint",
    "type-check": "npm run type-check:frontend && npm run type-check:agent",
    "type-check:frontend": "cd frontend && npx tsc --noEmit",
    "type-check:agent": "cd agent && npx tsc --noEmit",
    "install:all": "npm install && cd frontend && npm install && cd ../agent && npm install",
    "clean": "rm -rf node_modules frontend/node_modules agent/node_modules frontend/.next agent/dist",
    "health:check": "node scripts/health-check.js",
    "start:services": "concurrently --kill-others --prefix-colors \"blue,green\" \"npm run dev:frontend\" \"npm run dev:agent\"",
    "stop:services": "pkill -f 'next dev' && pkill -f 'tsx watch'",
    "dev:clean": "./scripts/start-dev.sh",
    "setup": "./scripts/setup-environment.sh",
    "setup:env": "./scripts/setup-environment.sh",
    "supabase:start": "cd frontend && supabase start",
    "supabase:stop": "cd frontend && supabase stop",
    "supabase:reset": "cd frontend && supabase db reset",
    "supabase:status": "cd frontend && supabase status",
    "supabase:env:copy": "./scripts/supabase-get-credentials.sh",
    "mcp:browser-tools-server": "npx @agentdeskai/browsertools-mcp@latest",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "agent/src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
