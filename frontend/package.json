{
  "name": "chef-chopsky-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "npm run test:unit",
    "test:unit": "jest --config jest.unit.config.js",
    "test:unit:watch": "jest --config jest.unit.config.js --watch",
    "test:unit:coverage": "jest --config jest.unit.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js --verbose",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:integration:frontend": "jest --config jest.integration.config.js --testNamePattern=\"Frontend Service Integration Tests\" --verbose",
    "test:integration:agent": "jest --config jest.integration.config.js --testNamePattern=\"Agent Service Integration Tests\" --verbose",
    "test:integration:communication": "jest --config jest.integration.config.js --testNamePattern=\"Integration Communication Tests\" --verbose",
    "test:integration:all": "jest --config jest.integration.config.js --testPathPatterns=\"service|communication\" --verbose",
    "test:integration:with-services": "node ../scripts/health-check.js && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:with-services": "node ../scripts/health-check.js && npm run test:e2e",
    "test:e2e:network": "playwright test tests/e2e/network-verification.spec.ts",
    "test:e2e:network:headed": "playwright test tests/e2e/network-verification.spec.ts --headed",
    "test:e2e:network:debug": "playwright test tests/e2e/network-verification.spec.ts --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:all:with-network": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:e2e:network",
    "test:langsmith": "jest --config jest.integration.config.js tests/integration/langsmith-tracing.test.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "axios": "^1.12.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.294.0",
    "next": "^15.5.3",
    "openai": "^5.19.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.1",
    "uuid": "^13.0.0",
    "whatwg-fetch": "^3.6.20"
  }
}
