# Chef Chopsky Frontend Environment Variables - Production Environment

# Supabase Configuration (Required)
# Use your production Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_production_publishable_key_here

# Supabase Secret Key (Required for server-side operations)
SUPABASE_SECRET_KEY=your_production_supabase_secret_key_here

# Agent Service Configuration (Required)
# Point to your production agent service
AGENT_SERVICE_URL=https://your-agent-production-url.railway.app

# Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# Environment Discriminator (should match agent APP_ENV)
APP_ENV=production

# Production-specific settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=warn

# Analytics and Monitoring (Required for production)
NEXT_PUBLIC_ANALYTICS_ID=your_production_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_production_sentry_dsn

# Performance and Security
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_NEW_FEATURES=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
